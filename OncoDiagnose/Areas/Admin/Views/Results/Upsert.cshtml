@using OncoDiagnose.Web.ViewModels
@model OncoDiagnose.Web.ViewModels.ResultViewModel

@{
    ViewBag.Title = "title";
    var title = "Thêm mới";
    Layout = "_Layout";
}

<br/>
<div class="container">
    <form method="post">
        <div class="row p-3 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Id != 0)
            {
                title = "Chỉnh sửa";
            }
            <div class="col-12 border-bottom">
                <h2 class="text-primary">@title</h2>
            </div>
            <div class="col-8 pt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" class="form-control" readonly/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TestId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="TestId" class="form-control" asp-items="ViewBag.TestId"></select>
                    </div>
                </div>
                @*-------ENUM------*@
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="GeneName"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="GeneName" asp-items="Html.GetEnumSelectList<GeneNameViewModel>()">
                            <option selected="selected" value="">Please select</option>
                        </select>
                    </div>
                </div>
                @*-----------------*@
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Variant"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Variant" class="form-control"/>
                        <span asp-validation-for="Variant" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Frequence"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Frequence" class="form-control"/>
                        <span asp-validation-for="Frequence" class="text-danger"></span>
                    </div>
                </div>
            <div class="form-group row">
                    <div class="col-8 offset-4">
                        @if (Model.Id != 0)
                        {
                            <partial name="_EditAndbackToListButton" model="Model.Id"/>
                        }
                        else
                        {
                            <partial name="_CreateAndbackToListButton"/>
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<br/>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}